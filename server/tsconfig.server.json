{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "skipLibCheck": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ]
}